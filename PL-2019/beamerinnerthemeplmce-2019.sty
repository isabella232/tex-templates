    		\usebeamerfont{date}\insertdate\hfill
    	\end{beamercolorbox}%
        \begin{beamercolorbox}{author}
            \usebeamerfont{author}\insertauthor\hfill\par%
        \end{beamercolorbox}%
    \end{textblock*}
}

