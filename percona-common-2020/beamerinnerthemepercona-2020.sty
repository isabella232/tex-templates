      \begin{scope}[shift={(current page.north west)}] 
        \fill[percona-2020orange](0\paperwidth,-0.113\paperheight) rectangle (0.749\paperwidth,-0.887\paperheight);
        \fill[percona-2020lightgray](0.76\paperwidth,-0.113\paperheight) rectangle (\paperwidth,-0.887\paperheight);
      \end{scope}
    \end{tikzpicture}

    \begin{textblock*}{0.675\paperwidth}(0.09\paperwidth,0.573\paperheight)
      \begin{beamercolorbox}{title page header}
        \usebeamerfont{title}\inserttitle\hfill%
      \end{beamercolorbox}%
    \end{textblock*}
    \ifx\insertsubtitle\@empty%
    \else
        \begin{textblock*}{0.675\paperwidth}(0.09\paperwidth,0.7\paperheight)
          \begin{beamercolorbox}{subtitle}
            \usebeamerfont{subtitle}\insertsubtitle\hfill%
